# Debug mode (true/false)
DEBUG="true"

# Number of posts to sync in each direction
POSTS_TO_SYNC="10"

# Whether to ignore reposts/reblogs (true/false)
IGNORE_REPOSTS="true"

# Dry run mode - set to true to simulate without posting
DRY_RUN="true"

# Mastodon Configuration
MASTODON_URL="https://mastodon.social"
MASTODON_USERNAME="your-username"
MASTODON_ACCESS_TOKEN="your-mastodon-access-token"

# Bluesky Configuration
BLUESKY_USERNAME="your-handle.bsky.social"
BLUESKY_PASSWORD="your-app-password"

# Optional: Set a specific last sync time for testing
# Format: ISO 8601 timestamp
# LAST_SYNC="2024-01-01T00:00:00Z"
